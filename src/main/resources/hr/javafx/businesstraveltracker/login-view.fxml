<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" stylesheets="@global-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.javafx.businesstraveltracker.controller.LogInController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Business Travel Expense Tracker">
      <font>
         <Font size="24.0" />
      </font></Label>
   <VBox alignment="CENTER" prefHeight="459.0" prefWidth="760.0">
      <children>
         <Label minWidth="200.0" text="Enter username:">
            <padding>
               <Insets right="14.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="3.0" top="3.0" />
            </VBox.margin>
         </Label>
         <TextField fx:id="usernameTextField" maxWidth="200.0">
            <VBox.margin>
               <Insets bottom="3.0" top="3.0" />
            </VBox.margin>
         </TextField>
         <Label minWidth="200.0" text="Enter password:">
            <padding>
               <Insets right="14.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="3.0" top="3.0" />
            </VBox.margin>
         </Label>
         <PasswordField fx:id="passwordTextField" maxWidth="200.0" />
         <Button fx:id="logInButton" mnemonicParsing="false" onAction="#logIn" text="Log in">
            <VBox.margin>
               <Insets bottom="3.0" top="20.0" />
            </VBox.margin>
         </Button>
      </children>
   </VBox>
</VBox>
