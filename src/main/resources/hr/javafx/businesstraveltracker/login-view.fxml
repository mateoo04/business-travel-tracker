         <Label minWidth="200.0" text="Enter username:">
            <padding>
               <Insets right="14.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="3.0" top="3.0" />
            </VBox.margin>
         </Label>
         <TextField maxWidth="200.0">
            <VBox.margin>
               <Insets bottom="3.0" top="3.0" />
            </VBox.margin>
         </TextField>
         <Label minWidth="200.0" text="Enter password:">
            <padding>
               <Insets right="14.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="3.0" top="3.0" />
            </VBox.margin>
         </Label>
         <TextField maxWidth="200.0">
            <VBox.margin>
               <Insets bottom="3.0" top="3.0" />
            </VBox.margin>
         </TextField>
         <Button mnemonicParsing="false" text="Log in">
            <VBox.margin>
               <Insets bottom="3.0" top="20.0" />
            </VBox.margin>
         </Button>
      </children>
   </VBox>
